    println "Yo soy Gradle :)"
}

task mayusculas << {
    String unString = 'cArLa SuArEz'
    println "Original: " + unString 
    println "Upper case: " + unString.toUpperCase()
}

task contar << {
    4.times { print "$it " }
}

